[core]
  editor = vim
  quotepath = false

[user]
  name = minhanghuang
  email = job@minhang.me

[alias]
  o = checkout
  co = checkout
  cob = checkout -b
  coo = !git fetch && git checkout
  d = diff
  br = branch
  brd = branch -d
  s = status
  st = status
  aa = add -A .
  unstage = reset --soft HEAD^
  cm = commit -m
  amend = commit --amend -m
  fix = commit --fixup
  undo = reset HEAD~1
  rv = revert
  cp = cherry-pick
  pu = !git push origin `git branch --show-current`
  fush = push -f
  mg = merge --no-ff
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbs = rebase --skip
  rom = !git fetch && git rebase -i origin/master --autosquash
  save = stash push
  pop = stash pop
  apply = stash apply
  rl = reflog

[includeIf "gitdir:~/work/code/trunk/"]
    path = ~/.gitconfig_trunk

[includeIf "gitdir:~/work/code/github/"]
    path = ~/.gitconfig_github

[includeIf "gitdir:~/work/code/gitee/"]
    path = ~/.gitconfig_gitee

[safe]
    directory = /usr/local/Homebrew/Library/Taps/homebrew/homebrew-core
    directory = /usr/local/Homebrew/Library/Taps/homebrew/homebrew-cask

[oh-my-zsh]
	hide-dirty = 1
	hide-status = 1
